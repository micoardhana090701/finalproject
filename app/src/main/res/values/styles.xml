<resources>
    <!-- Button Styles -->
    <style name="RoundedButton.Primary" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Text Syle -->
    <style name="Title1" parent="TextAppearance.AppCompat" >
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/text_100</item>
    </style>

    <style name="Title2" parent="TextAppearance.AppCompat" >
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_100</item>
    </style>

    <style name="Subtitle1" parent="TextAppearance.AppCompat" >
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_100</item>
    </style>

    <style name="Body1" parent="TextAppearance.AppCompat" >
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">@color/text_100</item>
    </style>

    <style name="Body2" parent="TextAppearance.AppCompat" >
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">@color/text_100</item>
    </style>

    <style name="Caption" parent="TextAppearance.AppCompat" >
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">@color/text_100</item>
    </style>

    <style name="Overline" parent="TextAppearance.AppCompat" >
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textSize">10sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">@color/text_100</item>
    </style>
</resources>